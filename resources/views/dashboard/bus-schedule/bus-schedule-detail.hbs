<div class="wrapper">
    {{> sidebar span= user.username}}
    <div class="main-panel">
      {{> navbar}}
      <div class="content">
        <div class="container-fluid">
          <div class="row bus-detail">
              <div class="col-md-6 schedule-info">
                <div class="card">
                    <div class="card-header card-header-text card-header-rose">
                        <div class="card-text">
                        <h4 class="card-title">Thông Tin Lịch Trình Xe</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Điểm Đi:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.startpoint}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Điểm Đến:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.endpoint}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Điểm Đón:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.startstation}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Điểm Trả:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.endstation}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Giờ Khởi Hành:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.triptimestart}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Giờ Đến:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.triptimeend}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Ngày Khởi Hành:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{bus.tripdate}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>   
              </div>
              <div class="col-md-6">
                <div class="card vehicle-info">
                    <div class="card-header card-header-text card-header-rose">
                        <div class="card-text">
                        <h4 class="card-title">Thông Tin Phương Tiện</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Loại xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.cartype}} chỗ</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Biển số xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.licsenceplates}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Chủ xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.carowner}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card record-info">
                    <div class="card-header card-header-text card-header-rose">
                        <div class="card-text">
                        <h4 class="card-title">Thông Tin Bảng Ghi</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4"><span class="font-weight-bold">Thời giao tạo:</span></div>
                                <div class="col-md-8"><span class="text-muted">{{bus.createdAt}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4"><span class="font-weight-bold">Thời gian cập nhật:</span></div>
                                <div class="col-md-8"><span class="text-muted">{{bus.updatedAt}}</span></div>
                            </div>
                        </div>
                    </div>
                </div> 
              </div>
          </div>
          <div class="row bus-statics">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-rose">
                    <div class="nav-tabs-navigation">
                        <div class="nav-tabs-wrapper">
                            <ul class="nav nav-tabs" data-tabs="tabs">
                                <li class="nav-item">
                                    <a class="nav-link" href="#customers" data-toggle="tab">
                                    <i class="material-icons">assignment_turned_in</i>
                                    Danh sách khách hàng
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#revenue" data-toggle="tab">
                                    <i class="material-icons">attach_money</i>
                                    Doanh thu
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="tab-content">
                        <div class="tab-pane" id="customers">
                            <p class="text-center font-weight-bold">Tổng số khách hàng: {{customers.length}}</p>
                            <div class="material-datatables">
                                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="padding-right: 10px!important">#</th>
                                            <th>Họ và tên</th>
                                            <th>Số điện thoại</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Họ và tên</th>
                                            <th>Số điện thoại</th>
                                            <th>Email</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each customers}}
                                        <tr>
                                            <td>{{sumIndex @index 1}}</td>
                                            <td>{{this.fullname}}</td>
                                            <td>{{this.phone}}</td>
                                            <td>{{this.email}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="revenue">
                            {{!-- <p class="text-center font-weight-bold">Tổng doanh thu: </p> --}}
                            <div class="material-datatables">
                                <table id="revenue-table" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="padding-right: 15px!important">#</th>
                                            <th>Tên Khách</th>
                                            <th>Số Ghế</th>
                                            <th>Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Tên Khách</th>
                                            <th>Số Ghế</th>
                                            <th>Thành tiền</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each customers}}
                                        <tr>
                                            <td>{{sumIndex @index 1}}</td>
                                            <td>{{this.fullname}}</td>
                                            <td>{{this.pickedseats}}</td>
                                            <td>{{calculateTicket (countTickets pickedseats)}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
          </div>
        </div>
      </div>
    </div>
</div>
