<div class="wrapper">
    {{> sidebar span= user.username}}
    <div class="main-panel">
      {{> navbar}}
      <div class="content">
        <div class="container-fluid">
          <div class="row bus-detail">
              <div class="col-md-6">
                <div class="card vehicle-info">
                    <div class="card-header card-header-text card-header-rose">
                        <div class="card-text">
                        <h4 class="card-title">Thông Tin Phương Tiện</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Loại xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.cartype}} chỗ</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Biển số xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.licsenceplates}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Chủ xe:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{car.carowner}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><span class="font-weight-bold">Tài khoản quản lí:</span></div>
                                <div class="col-md-9"><span class="text-muted">{{usermanagement.username}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
              <div class="col-md-6 record-info">
                <div class="card">
                    <div class="card-header card-header-text card-header-rose">
                        <div class="card-text">
                        <h4 class="card-title">Thông Tin Bảng Ghi</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4"><span class="font-weight-bold">Thời giao tạo:</span></div>
                                <div class="col-md-8"><span class="text-muted">{{car.createdAt}}</span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4"><span class="font-weight-bold">Thời gian cập nhật:</span></div>
                                <div class="col-md-8"><span class="text-muted">{{car.updatedAt}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>   
              </div>
          </div>
          <div class="row car-statics">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-rose">
                    <div class="nav-tabs-navigation">
                        <div class="nav-tabs-wrapper">
                            <ul class="nav nav-tabs" data-tabs="tabs">
                                <li class="nav-item">
                                    <a class="nav-link" href="#schedule" data-toggle="tab">
                                    <i class="material-icons">assignment_turned_in</i>
                                    Lịch trình chi tiết
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#revenue" data-toggle="tab">
                                    <i class="material-icons">attach_money</i>
                                    Doanh thu
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="tab-content">
                        <div class="tab-pane" id="schedule">
                            <p class="text-center font-weight-bold">Tổng số lịch trình đã nhận: {{bus.length}}</p>
                            <div class="material-datatables">
                                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="padding-right: 15px!important">#</th>
                                            <th>Điểm đi - Điểm đến</th>
                                            <th>Điểm đón - điểm trả</th>
                                            <th>Giờ đi - Giờ đến</th>
                                            <th>Ngày</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Điểm đi - Điểm đến</th>
                                            <th>Điểm đón - điểm trả</th>
                                            <th>Giờ đi - Giờ đến</th>
                                            <th>Ngày</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each bus}}
                                        <tr>
                                            <td>{{sumIndex @index 1}}</td>
                                            <td>{{this.startpoint}} - {{this.endpoint}}</td>
                                            <td>{{this.startstation}} - {{this.endstation}}</td>
                                            <td>{{this.triptimestart}} - {{this.triptimeend}}</td>
                                            <td>{{this.tripdate}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="revenue">
                            {{!-- <p class="text-center font-weight-bold">Tổng doanh thu: </p> --}}
                            <div class="material-datatables">
                                <table id="revenue-table" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="padding-right: 15px!important">#</th>
                                            <th>Điểm đi - Điểm đến</th>
                                            <th>Ngày</th>
                                            <th>Số Vé</th>
                                            <th>Doanh Thu</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>#</th>
                                            <th>Điểm đi - Điểm đến</th>
                                            <th>Ngày</th>
                                            <th>Số Vé</th>
                                            <th>Doanh Thu</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each bus}}
                                        <tr>
                                            <td>{{sumIndex @index 1}}</td>
                                            <td>{{this.startpoint}} - {{this.endpoint}}</td>
                                            <td>{{this.tripdate}}</td>
                                            <td>{{countTickets customerpickedseats}}</td>
                                            <td>{{calculateTicket (countTickets customerpickedseats)}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
          </div>
        </div>
      </div>
    </div>
</div>
